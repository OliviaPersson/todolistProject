doctype html
html(lang="sv")
    head
        <!-- https://stackoverflow.com/questions/62657135/how-to-add-css-file-link-in-pug -->
        link(rel='stylesheet', type='text/css', href='/form.css')
    body
        form(action="/add")
            h1 Add task
            table
                tr
                    td To Do
                tr
                    td.todo-input
                        input(name='todo' type='text')
                tr
                    td Choose a category
                tr
                    td.todo-input
                        select#category(name="category")
                            option(value="work") Work
                            option(value="home") Home
                            option(value="purchase") Purchase
            input.add-button(type="submit" value="Add")
